{
  "name": "socrates-monorepo",
  "private": true,
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "cd apps/backend && npm run build",
    "dev": "npm run dev -w @socrates/backend",
    "dev:backend": "npm run dev -w @socrates/backend",
    "dev:mobile": "npm run start -w @socrates/mobile",
    "install-all": "npm install --workspaces",
    "vercel-build": "cd apps/backend && npm run build"
  },
  "devDependencies": {
    "typescript": "^5.5.0"
  }
}